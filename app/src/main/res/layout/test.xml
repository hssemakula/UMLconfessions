<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="170dp"
        android:elevation="30dp"
        android:layout_margin="7dp"
        card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_post_location"
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/post_location"
                android:paddingStart="3dp"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/posts_circle"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"
                android:paddingStart="2dp"/>
            <TextView
                android:id="@+id/time_ago"
                android:paddingStart="3dp"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20m"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:maxHeight="140dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/vote_layout"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.15"
                android:padding="10dp"
                android:text="@string/sample_text_long"
                android:textSize="14sp" />

            <!--  center up and down vote vertically  WITH  android:layout_alignParentRight-->
            <LinearLayout
                android:id="@+id/vote_layout"
                android:layout_width="30dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp"
                android:orientation="vertical"
                android:paddingEnd="5dp">

                <Button
                    android:id="@+id/up_vote"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/ic_keyboard_arrow_up_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vote_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/sample_comment_size"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/down_vote"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:textStyle="bold" />
            </LinearLayout>

    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/comment_button"
                    android:paddingBottom="10dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_post_comment" />

                <TextView
                    android:id="@+id/comment_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:text="@string/sample_comment_size"
                    android:textSize="15sp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>