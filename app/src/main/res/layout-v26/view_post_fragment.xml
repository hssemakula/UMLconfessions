<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hillary.umlconfessions.GUI.ConfessionsActivity">

    <!-- Hillary Ssemakula
Alternative resource for a device running android api level 26.
-->
    <!-- A scrollview can only have one direct child -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="148dp"
                        android:drawableStart="@drawable/ic_fingerprint_black_24dp"
                        android:paddingTop="7dp"
                        android:text="@string/user_tag"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:id="@+id/right_header_info"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal"
                        android:paddingStart="0dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/location_icon"
                            android:paddingStart="5dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="0dp"
                            android:src="@drawable/ic_post_location" />

                        <TextView
                            android:id="@+id/post_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="3dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="0dp"
                            android:text="@string/sample_location"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/time_passed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="0dp"
                            android:text="@string/sample_time_passed"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp">

                    <TextView
                        android:id="@+id/text_of_the_post"
                        android:layout_width="257dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_toStartOf="@+id/vote_layout"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:focusable="true"
                        android:lineSpacingExtra="2dp"
                        android:lineSpacingMultiplier="1.15"
                        android:padding="10dp"
                        android:text="@string/sample_text_long"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <!--  center up and down vote vertically  WITH  android:layout_alignParentRight-->
                    <LinearLayout
                        android:id="@+id/vote_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:paddingStart="0dp"
                        android:paddingEnd="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/up_vote"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/ic_keyboard_arrow_up_black"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/vote_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="@string/sample_comment_size"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/down_vote"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/ic_keyboard_arrow_down_black_24dp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/comment_post_border">

                    <LinearLayout
                        android:id="@+id/confession_comment_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <Button
                            android:id="@+id/comment_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_post_comment"
                            android:backgroundTint="@color/colorPrimary"
                            android:paddingBottom="10dp" />

                        <TextView
                            android:id="@+id/comment_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="4dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="4dp"
                            android:text="@string/sample_comment_size"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/report"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/ic_flag_black_24dp"
                        android:backgroundTint="@color/colorPrimary" />

                </RelativeLayout>

            </LinearLayout>


            <!-- COMMENT SECTION BEGINS HERE UNDER RECYCLER VIEW -->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/view_post_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#fff"
        card_view:cardCornerRadius="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_margin="8dp">

            <EditText
                android:id="@+id/edit_text_for_comments"
                android:maxLines="5"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/submit_button_for_comments"
                android:layout_height="wrap_content"
                android:hint="@string/write_your_comment_here"
                android:background="@android:color/transparent"
                android:inputType=""
                android:importantForAutofill="no" />

            <ImageView
                android:id="@+id/submit_button_for_comments"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_send_black_24dp"
                android:contentDescription="@string/comment" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>